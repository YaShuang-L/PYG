.index_swiper swiper {
  width: 750rpx;
  height: 340rpx;
}
.index_swiper swiper image {
  width: 100%;
}
.pyg_category {
  height: 100%;
}
.cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates_container .left_menu {
  flex: 2;
}
.cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
}
.cates_container .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates_container .right_menu {
  flex: 5;
}
.cates_container .right_menu .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cates_container .right_menu .goods_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates_container .right_menu .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates_container .right_menu .goods_group .goods_list navigator {
  width: 33.33%;
  text-align: center;
}
.cates_container .right_menu .goods_group .goods_list navigator image {
  width: 50%;
}
